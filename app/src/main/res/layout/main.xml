<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/hPic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/upicbackground"/>

        <TextView
            android:id="@+id/hName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Name"
            android:textSize="40dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/hSkill"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hSkillPic"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/skills"/>

                <TextView
                    android:id="@+id/hSkillName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="Skills"
                    android:textSize="22dp"/>

                <ImageButton
                    android:id="@+id/hSkillTTS"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:src="@drawable/tts"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hInterest"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hIntPic"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/interests"/>

                <TextView
                    android:id="@+id/hIntName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="Interests"
                    android:textSize="22dp"/>

                <ImageButton
                    android:id="@+id/hIntTTS"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:src="@drawable/tts"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hExp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hExpPic"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/experience"/>

                <TextView
                    android:id="@+id/hExpName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="Experience"
                    android:textSize="22dp"/>

                <ImageButton
                    android:id="@+id/hExpTTS"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:src="@drawable/tts"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hAbout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hAboutPic"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/info"/>

                <TextView
                    android:id="@+id/hAboutName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="About Me"
                    android:textSize="22dp"/>

                <ImageButton
                    android:id="@+id/hAboutNameTTS"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:src="@drawable/tts"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hApplied"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hAppliedPic"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/applied"/>

                <TextView
                    android:id="@+id/hAppliedName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="Applied"
                    android:textSize="22dp"/>

                <ImageButton
                    android:id="@+id/hAppliedTTS"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:src="@drawable/tts"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hLogout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hLogoutPic"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/logout"/>

                <TextView
                    android:id="@+id/hLogoutName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="Logout"
                    android:textSize="22dp"/>

                <ImageButton
                    android:id="@+id/hLogoutTTS"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:src="@drawable/tts"/>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/hSearch"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:text="Find Jobs!"
            android:textSize="22dp"/>
    </LinearLayout>
</ScrollView>