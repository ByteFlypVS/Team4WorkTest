<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Main"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/hPic"

            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/hName"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"

            android:text="Name"
            android:textSize="40dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/hSkill"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"

                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hSkillPic"

                    android:layout_width="50dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/hSkillName"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"

                    android:text="Skills"
                    android:textSize="22dp"/>

                <Button
                    android:id="@+id/hSkillTTS"

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="0dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hInterest"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"

                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hIntPic"

                    android:layout_width="50dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/hIntName"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"

                    android:text="Interests"
                    android:textSize="22dp"/>

                <Button
                    android:id="@+id/hIntTTS"

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="0dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hExp"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"

                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hExpPic"

                    android:layout_width="50dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/hExpName"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"

                    android:text="Experience"
                    android:textSize="22dp"/>

                <Button
                    android:id="@+id/hExpTTS"

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="0dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hAbout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"

                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hAboutPic"

                    android:layout_width="50dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/hAboutName"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"

                    android:text="About Me"
                    android:textSize="22dp"/>

                <Button
                    android:id="@+id/hAboutNameTTS"

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="0dp"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/hSearch"

            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="20dp"

            android:text="Find Jobs!"
            android:textSize="22dp"/>
    </LinearLayout>
</RelativeLayout>